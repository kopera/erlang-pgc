{minimum_otp_vsn, "26"}.

{project_plugins, [
    rebar3_ex_doc
]}.

{shell, [
    {apps, [pgc]}
]}.

{ex_doc, [
    {extras, [
        {'README.md', #{title => <<"Overview">>}},
        {'LICENSE.md', #{title => <<"License">>}},
        {'NOTICE', #{title => <<"Copyright">>}}
    ]},
    {main, "README.md"},
    {source_url, "https://github.com/kopera/erlang-pgc"}
]}.

{hex, [
    {doc, #{provider => ex_doc}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.
